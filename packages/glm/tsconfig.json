{
  "compilerOptions": {
    "lib": [
      "ESNext",
    ],
    "target": "ESNext",
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "spec"
  ]
}